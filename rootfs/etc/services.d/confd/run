#!/usr/bin/execlineb -P

with-contenv
s6-envuidgid nginx
multisubstitute
{
  import -u -D0 UID
  import -u -D0 GID
  import -u -D "/lb" CONFD_PREFIX
  import -u -D "" CONFD_INTERVAL
  import -u -D"etcd" CONFD_BACKEND
  import -u CONFD_BACKEND_ARGS
  define CONFD_CHECK_CMD "/usr/sbin/nginx -t -c {{ .src }}"
  define CONFD_RELOAD_CMD "/usr/sbin/nginx -s reload"
}
ifelse { s6-test -z ${CONFD_INTERVAL} }
{
  confd --prefix="${CONFD_PREFIX}" --tmpl-uid="${UID}" --tmpl-gid="${GID}" --tmpl-src="/etc/nginx/nginx.conf.tmpl" --tmpl-dest="/etc/nginx/nginx.conf" --tmpl-check-cmd="${CONFD_CHECK_CMD}" --tmpl-reload-cmd="${CONFD_RELOAD_CMD}" ${CONFD_BACKEND} ${CONFD_BACKEND_ARGS}	
}
confd --watch --prefix="${CONFD_PREFIX}" --tmpl-uid="${UID}" --tmpl-gid="${GID}" --tmpl-src="/etc/nginx/nginx.conf.tmpl" --tmpl-dest="/etc/nginx/nginx.conf" --tmpl-check-cmd="${CONFD_CHECK_CMD}" --tmpl-reload-cmd="${CONFD_RELOAD_CMD}" ${CONFD_BACKEND} ${CONFD_BACKEND_ARGS}
